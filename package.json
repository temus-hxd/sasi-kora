{
  "name": "sasi-kora",
  "version": "1.0.0",
  "description": "SASI-KORA - Node.js/TypeScript Emotional State Engine",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "vercel-build": "git submodule update --init --recursive && npm run build",
    "format": "prettier --write \"**/*.{js,ts,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md,html,css}\""
  },
  "keywords": [
    "emotion-engine",
    "ai",
    "chatbot",
    "groq"
  ],
  "author": "Raphael Moreno",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "groq-sdk": "^0.3.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "prettier": "^3.7.3",
    "typescript": "^5.3.3"
  }
}
